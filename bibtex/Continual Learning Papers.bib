file = {:home/andrea/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Mirzadeh et al. - 2020 - Linear Mode Connectivity in Multitask and Continual Learning.pdf:pdf},
journal = {arXiv},
keywords = {[cifar],[experimental],[mnist]},
mendeley-tags = {[cifar],[experimental],[mnist]},
month = {oct},
title = {{Linear Mode Connectivity in Multitask and Continual Learning}},
url = {https://github.com/imirzadeh/MC-SGD http://arxiv.org/abs/2010.04495},
year = {2020}
}
