arxivId = {1804.09458},
author = {Gidaris, Spyros and Komodakis, Nikos},
booktitle = {Proceedings of the IEEE Computer Society Conference on Computer Vision and Pattern Recognition},
doi = {10.1109/CVPR.2018.00459},
